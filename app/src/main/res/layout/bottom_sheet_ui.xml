<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/ui_directions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/bottom_sheet_ui_image"
            android:layout_height="@dimen/bottom_sheet_ui_image"
            android:layout_gravity="center"
            android:src="@drawable/ic_directions_m"
            android:tint="@color/white"
            app:civ_border_color="@color/huawei_red"
            app:civ_border_width="2dp"  />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/directions"
            android:textAllCaps="true"
            android:textColor="@color/huawei_red"
            android:textSize="@dimen/bottom_sheet_ui_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/bottom_sheet_ui_image"
            android:layout_height="@dimen/bottom_sheet_ui_image"
            android:layout_gravity="center"
            android:src="@drawable/ic_bookmark"
            android:tint="@color/white"
            app:civ_border_color="@color/huawei_red"
            app:civ_border_width="2dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/huawei_red"
            android:textSize="@dimen/bottom_sheet_ui_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/bottom_sheet_ui_image"
            android:layout_height="@dimen/bottom_sheet_ui_image"
            android:layout_gravity="center"
            android:src="@drawable/ic_share"
            android:tint="@color/white"
            app:civ_border_color="@color/huawei_red"
            app:civ_border_width="2dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/share_place"
            android:textAllCaps="true"
            android:textColor="@color/huawei_red"
            android:textSize="@dimen/bottom_sheet_ui_text" />

    </LinearLayout>

</LinearLayout>